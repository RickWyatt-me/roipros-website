---
import Logo from '../components/Logo.astro';

const navItems = [
	{ linkText: 'Home', href: '/' },
	{ linkText: 'Services', href: '/services' },
	{ linkText: 'Portfolio', href: '/portfolio' },
	{ linkText: 'Quote', href: '/quote' }
];
---

<nav class="flex flex-col gap-4 pt-4 pb-10 sm:flex-row sm:items-center sm:justify-between sm:pt-6 sm:pb-14">
	<a href="/" class="flex items-center gap-2 sm:gap-3">
		<Logo />
		<span class="text-xl font-semibold tracking-tight text-white sm:text-2xl">
			<span class="mr-0.5">ROI</span><span class="font-normal text-nav">pros</span>
		</span>
	</a>

	{!!navItems?.length && (
		<ul class="flex flex-wrap justify-center gap-x-5 gap-y-2 text-sm font-medium text-nav sm:justify-end">
			{navItems.map((item) => (
				<li>
					<a
						href={item.href}
						class="inline-block px-1.5 py-1 transition hover:text-white sm:px-3 sm:py-2"
					>
						{item.linkText}
					</a>
				</li>
			))}
		</ul>
	)}
</nav>
