---
import Logo from '../components/Logo.astro';

const navItems = [
  { linkText: 'Home', href: '/' },
  { linkText: 'Services', href: '/services' },
  { linkText: 'Portfolio', href: '/portfolio' },
  { linkText: 'Quote', href: '/quote' }
];
---

<header class="w-full">
  <nav class="flex items-center justify-between py-6 sm:py-7">
    
    <!-- Logo -->
    <a href="/" class="flex items-center">
      <Logo />
    </a>

    <!-- Navigation Links -->
    {navItems?.length > 0 && (
      <ul class="flex items-center gap-4 sm:gap-6">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="px-1.5 py-1 text-sm sm:text-base font-medium transition-colors"
            >
              {item.linkText}
            </a>
          </li>
        ))}
      </ul>
    )}
    
  </nav>
</header>
